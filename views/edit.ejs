<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= title %> </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" media="screen" href="edit.css">

    
    <script src="ejs.js"></script>
    <script src="ejs.min.js"></script>

    <script src="jquery-3.3.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    
    
</head>
<body>
    <div id="main-container">
        <div id=searchArea>
        <label for="tableSearch"></label>
        <input type="text" name="tableSearch" id="tableSearch" value ="" placeholder="Search..">
        </div>
        <br>
        <br>
        <!-- <input type="button" name="" id="" >
        <input type="button" name="newEntry" id="newEntry" value = "New Entry">  -->
        <table class="pure-table pure-table-horizontal mainTable">
                <thead>
                    <tr>
                        <th>Short</th>
                        <th>Full Name</th>
                        <th>Department</th>
                        <th>Hire Date</th>

                    </tr>
                </thead>
            
                <tbody id="orderTableSearch" >
                    <% output.forEach(function(table){ %>
                    <tr class = "infoRow" id= "<%= table.Employee %>">
                        <td> <%= table.Employee %></td>
                        <td> <%= table.First_Name %> <%= table.Last_Name %></td>
                        <td> <%= table.Department %></td>
                        <td> <%= table.Hire_Date.getDate() + "/" + (table.Hire_Date.getMonth()+1) + "/" + table.Hire_Date.getFullYear() %></td>

                    </tr>
                    <% })%>
                </tbody>
            </table>
        </div>
        <div id="container">
            <div id="diagE" title="User Info">
                <div id="divInDialog"> </div>
                
            </div>
            <div id="editPage" title="Edit">
                <div id="editForm"> </div>
                <div id="divResults"></div>
            </div>
        </div>
    
</body>
<script src="/sendstatus.js"></script>
</html>