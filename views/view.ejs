                    <td><%- user[0].Employee %></td>
                    <td colspan="2">
                        <%= user[0].Hire_Date.getDate() + "/" + (user[0].Hire_Date.getMonth()+1) + "/" + user[0].Hire_Date.getFullYear() %>
                    </td>
                </tr>

            </tbody>


        </table>
        <br>
        <% if(title == "ALGEMEEN"){ %>
        <ol>
            <li>
