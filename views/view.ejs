</Head>
<script>
    var today = new Date();
    var dd = String(today.getDate()).padStart(2, '0');
    var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
    var yyyy = today.getFullYear();

    today = mm + '/' + dd + '/' + yyyy;
</script>

<body>
    <div id="content">
        <table id="headTable" class="pure-table pure-table-bordered">
            <thead>
                <tr>
                    <th rowspan="3"><img id="slabImg" width="220px" src="logo-slabinck.png" alt=""></th>
                    <th rowspan="3">
                        Opvolgingsformulier<br>
                        Introductie Werknemer<br>
                        <%- title %>
                    </th>

                    <th>
                        <% if(title == "ALGEMEEN"){%> HR_RF_04 <%} %>
                        <% if(title == "KLEINE BEWERKINGEN"){%> HR_RF_14 <%} %>
                        <% if(title == "LASERAFDELING"){%> HR_RF_10 <%} %>
                        <% if(title == "PONSAFDELING"){%> HR_RF_11 <%} %>
                        <% if(title == "PLOOIAFDELING"){%> HR_RF_12 <%} %>
                        <% if(title == "POEDERLAKKEN"){%> HR_RF_13 <%} %>
                    </th>
                    <th>
                        Versie: 01
                    </th>


                </tr>
                <tr>
                    <th>
                        Pagina 1 van 1
                    </th>
                    <th>
                        <script>
                            document.write(today);
                        </script>
                    </th>

                </tr>
                <tr>
                    <th colspan="2">
                        Opgesteld door: Kimberly Loose
                    </th>

                </tr>
                <tr>
                    <th>Werknemer</th>
                    <th>Init</th>
                    <th colspan="2">Indiensttredingsdatum</th>
                </tr>

            </thead>
            <tbody>
                <tr>
